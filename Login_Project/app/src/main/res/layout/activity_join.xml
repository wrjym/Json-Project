<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yongmac.login_project.Join">

    <EditText
        android:id="@+id/j_et_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="ID"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="75dp"
        android:layout_above="@+id/j_et_pw"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/j_et_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/j_et_name"
        android:layout_alignLeft="@+id/j_et_id"
        android:layout_alignStart="@+id/j_et_id"
        android:layout_marginBottom="35dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="72dp" />

    <EditText
        android:id="@+id/j_et_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name"
        tools:layout_editor_absoluteX="72dp"
        android:layout_marginBottom="35dp"
        android:layout_above="@+id/j_et_pn"
        android:layout_alignLeft="@+id/j_et_pw"
        android:layout_alignStart="@+id/j_et_pw" />

    <EditText
        android:id="@+id/j_et_pn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_insert"
        android:layout_alignLeft="@+id/bt_insert"
        android:layout_alignStart="@+id/bt_insert"
        android:layout_marginBottom="35dp"
        android:ems="10"
        android:hint="Phonenumber"
        android:inputType="phone"
        tools:layout_editor_absoluteX="72dp" />

    <Button
        android:id="@+id/bt_insert"
        android:layout_width="215dp"
        android:layout_height="47dp"
        android:layout_marginBottom="78dp"
        android:text="OK"
        tools:layout_editor_absoluteX="72dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/j_et_name"
        android:layout_alignStart="@+id/j_et_name" />

    <Button
        android:id="@+id/bt_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/com_facebook_auth_dialog_background"
        android:text="Back" />

</RelativeLayout>
